        <section class="dashboard section">
            <!-- Container Start -->
            <div class="container">
                <!-- Row Start -->
                <div class="row">
                    <div class="col-md-10 offset-md-1 col-lg-4 offset-lg-0">
                        <div class="sidebar">
                            <!-- User Widget -->
                            <div class="widget user-dashboard-profile">
                                <!-- User Image -->
                                <div class="profile-thumb">
                                    <img src="~/Image/@ViewBag.Image" alt="" class="rounded-circle">
                                </div>
                                <!-- User Name -->
                                <h5 class="text-center">@ViewBag.name</h5>
                                <p>Joined February 06, 2017</p>
                                <a href="/ProductsProvider/EditProfile" class="btn btn-main-sm">Edit Profile</a>
                            </div>
                            <!-- Dashboard Links -->
                            <div class="widget user-dashboard-menu">
                                <ul>
                                    <li class="active"><a href="/ProductsProvider/Index"><i class="fa fa-user"></i> My Product</a></li>
                                    <li><a href="/ProductsProvider/Create"><i class="fa-solid fa-plus"></i> Add New Product</a></li>
                                    <li><a href=""><i class="fa fa-file-archive-o"></i>Archived Ads <span>12</span></a></li>
                                    <li><a href=""><i class="fa fa-bolt"></i> Pending Approval<span>23</span></a></li>
                                    <li><a href=""><i class="fa fa-cog"></i> Logout</a></li>
                                    <li><a href=""><i class="fa fa-power-off"></i>Delete Account</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-0">
                        <!-- Recently Favorited -->
                        <div class="widget dashboard-container my-adslist">
                            <h3 class="widget-header">My Products</h3>
                            <table class="table table-responsive product-dashboard-table">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Product Title</th>
                                        <th class="text-center">Category</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        



                                    <tr>

                                        <td class="product-thumb">
                                            <img style="width:80px;height:auto" src="~/Image/@item.Image1" alt="image description">
                                        </td>
                                        <td class="product-details">
                                            <h3 class="title">@item.Name</h3>
                                            <span class="add-id"><strong>Ad ID:</strong> @item.ProductId</span>
                                            
                                            <span><strong>Posted on: </strong><time>@item.ProductPostDate</time> </span>
                                            @if(item.State==true){<span class="status active"><strong>Status</strong>New</span> }
else { <span class="status active"><strong>Status</strong>Used</span>}
                                            <span class="location"><strong>Location</strong>@item.User.UserLocation</span>
                                        </td>
                                        <td class="product-category"><span class="categories">@item.Category.CategoryName</span></td>
                                        <td class="action" data-title="Action">
                                            <div class="">
                                                <ul class="list-inline justify-content-center">
                                                    <li class="list-inline-item">
                                                        <a data-toggle="tooltip" data-placement="top" title="Tooltip on top" class="view" href="/ProductsProvider/Details/@item.ProductId">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a class="edit" href="/ProductsProvider/Edit/@item.ProductId">
                                                            <i class="fa fa-pencil"></i>
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a class="delete" href="/ProductsProvider/Delete/@item.ProductId">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                        
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <!-- Row End -->
            </div>
            <!-- Container End -->
        </section>
 