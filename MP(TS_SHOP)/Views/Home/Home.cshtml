<section class="popular-deals section bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2>Trending Ads</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quas, magnam.</p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Item2)
            {
                if (item.State != false)
                {
                    <!-- offer 01 -->

                    <div class="col-sm-12 col-lg-4">
                        <!-- product card -->
                        <div class="product-item bg-light">
                            <div class="card">
                                <div class="thumb-content">
                                    <!-- <div class="price">$200</div> -->
                                    <a href="">
                                        <img class="card-img-top img-fluid" style="width:100%;height:200px" src="~/Image/@item.Image1" alt="Card image cap">
                                    </a>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title"><a href="">@item.Name</a></h4>
                                    <ul class="list-inline product-meta">
                                        <li class="list-inline-item">
                                            <a href=""><i class="fa fa-folder-open-o"></i>@item.Category.CategoryName</a>
                                        </li>
                                        @{
                                            string date = item.ProductPostDate.ToString();
                                            date = date.Substring(0,9);
                                            <li class="list-inline-item">
                                               <p><i class="fa fa-calendar"></i> @date</p>
                                            </li>}
                                    </ul>
                                    <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Explicabo, aliquam!</p>
                                    @if (item.State == true) { <h3>New</h3>}
else {<h3>Used</h3> }
                                    
                                    <h2>@item.Price</h2>
                                </div>
                            </div>
                        </div>



                    </div>

                }
            }


        </div>
    </div>
</section>

